<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="appathon.com.billythesilly.ScenariosScreen"
    android:background="#EFECCA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:padding="10dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running with Scissors"
            android:id="@+id/buttonScissors"
            android:layout_gravity="center_horizontal"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:typeface="normal"
            android:textSize="25sp"
            android:onClick="goScissors"
            android:textColor="#737373" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crossing the Road"
            android:id="@+id/buttonRoad"
            android:layout_gravity="center_horizontal"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:textSize="25sp"
            android:onClick="goRoad"
            android:textColor="#737373" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classroom Actions"
            android:id="@+id/buttonClassroom"
            android:layout_gravity="center_horizontal"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:textSize="25sp"
            android:onClick="goClassroom"
            android:textColor="#737373" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scenarios"
        android:id="@+id/textScenarios"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="#002F2F"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:typeface="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Page"
        android:id="@+id/buttonNext"
        android:layout_gravity="center_horizontal"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:textSize="25sp"
        android:onClick="goNextPage"
        android:textColor="#046380"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
