<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="appathon.com.billythesilly.scenario.ResultsActivity"
    android:background="#EFECCA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Result"
        android:id="@+id/textResults"
        android:textStyle="bold"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="#f8000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You got it right!"
        android:id="@+id/textSuccess"
        android:textSize="26dp"
        android:layout_toStartOf="@+id/textResults"
        android:layout_marginTop="62dp"
        android:textColor="#f8000000"
        android:visibility="invisible"
        android:layout_marginRight="68dp"
        android:layout_below="@+id/textResults"
        android:layout_alignRight="@+id/textResults"
        android:layout_alignEnd="@+id/textResults" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You got it wrong."
        android:id="@+id/textFail"
        android:textSize="26dp"
        android:textColor="#f8000000"
        android:visibility="invisible"
        android:layout_below="@+id/textSuccess"
        android:layout_alignLeft="@+id/textSuccess"
        android:layout_alignStart="@+id/textSuccess"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:id="@+id/button19"
        android:onClick="goMenu"
        android:layout_below="@+id/textFail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="52dp"
        android:layout_marginTop="34dp" />

</RelativeLayout>
